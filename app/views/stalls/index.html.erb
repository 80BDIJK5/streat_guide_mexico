<div class="index-search my-3" >
  <%= form_tag stalls_path, method: :get, class: 'form-index-width' do %>
    <div class="search-form-control form-group" style="width: 100%;">
      <input class="form-control string required" type="text" name="query" id="search_query" placeholder="What are you craving today?" style="width: 100%">
        <button name="button" type="submit" class="btn btn-main" >
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
</div>

<div class="index-container">
  <div class="card-container-index" >
      <% @stalls.last(6).each do |stall| %>
      <%= render partial: "shared/stallcard", locals: {stall: stall} %>
    <% end %>
  </div>

  <div class="map-image" style="width: 100%; margin-left: 20px;">
    <div id="map"
      style="width: 100%; height: 60rem;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>
