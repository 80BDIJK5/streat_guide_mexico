
  <div class="index-search">

  <%= form_tag stalls_path, method: :get do %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="query" id="search_query" placeholder="What are you craving today?">
          <button name="button" type="submit" class="btn btn-main">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>

  </div>

  <div class="index-separate">
  <div class="card-container-index">
      <% @stalls.last(6).each do |stall| %>
      <%= render partial: "shared/stallcard", locals: {stall: stall} %>
    <% end %>
  </div>

  <div class="map-image">
  <div id="map"
     style="width: 54rem; height: 76rem;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
  </div>
