<div class="container-lg">
  <h2 class="text-center"> <%= @stall.name %> </h2>
  <div id="photos-section-left">
    <% if @stall.photos.attached? %>
      <div class="card">
        <%= cl_image_tag @stall.photos.first.key, crop: :fill, class: 'card-img-top', style: 'object-fit: cover; height: 400px;' %>
      </div>
      <% else %>
        <div class="card">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        </div>
      <% end %>
  </div>
  <h3>About us: </h3>
  <p><%= @stall.description %></p>
  <p>  Address: <%=@stall.address%> <p>
  <div>
    <h3>Services</h3>
       <p><span class="fa fa-star">Service 1</span> </p>
       <p><span class="fa fa-star">Service 1</span> </p>
  </div>
  <div id= "buttons"class="d-flex flex-row justify-content-center">
    <div>
      <%=link_to "Leave a review", new_stall_review_path(@stall),  class: "btn btn-second" %>
    </div>
    <div>
      <%=link_to "Get Directions", stalls_path,  class: "btn btn-second" %>
    </div>
  </div>
  <br>
  <h3 class="text-center">What others are talking about us?</h3>
  <% @stall.reviews.each do |review| %>
    <div class="review-card">
  <div class="review-card-product-infos">
    <h2>
      <%= review.title %>
    </h2>
    <p>
      <% review.rating.times do |rating| %>
          <span class="fa fa-star checked"></span>
        <% end %>
        <% ratingDelta = 5 - review.rating %>
        <% ratingDelta.times do |time| %>
          <span class="fa fa-star"></span>
        <% end %>
    </p>
    <p>
      <%= review.comment %>
    </p>
  </div>
  <img class="avatar-large" src='https://kitt.lewagon.com/placeholder/users/Eschults' width="50px" />
</div>
  <% end %>
</div>
