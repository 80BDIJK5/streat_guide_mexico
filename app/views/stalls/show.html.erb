<div class="container">
  <h2> <%= @stall.name %> </h2>
    <% if @stall.photos.attached? %>
      <div class="card">
        <%= cl_image_tag @stall.photos.first.key, crop: :fill, class: 'card-img-top', style: 'object-fit: cover; height: 400px;' %>
      </div>
      <% else %>
        <div class="card">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        </div>
      <% end %>
    <h3>About us: </h3>
    <p><%= @stall.description %></p>
    <p>  Address: @stall.address <p>
</div>
