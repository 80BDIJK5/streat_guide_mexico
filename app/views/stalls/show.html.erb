<div  class="container-show-stall">
    <!-- Top side section -->
    <div class="photos-info">
        <!-- Wrapper for row -->
        <div class="row">
            <div class="card col-5 ml-5">
              <h1 class="text-center section-headers">Recent photos</h1>
              <% imgCount = @stall.photos_aggregation.count %>
              <% if @stall.photos_aggregation.count == 0 %>
                <img src="https://st.depositphotos.com/3097111/4720/v/950/depositphotos_47208671-stock-illustration-photo-coming-soon-image-vector.jpg", style="object-fit: contain; height: 400px;" />
              <% end %>
                <!-- Insert Bootstrap for image carousel here -->
                <!-- Iterate through each image and add them to a carousel view -->
              <% if imgCount != 0 %>
                  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <%= cl_image_tag @stall.photos_aggregation.last.key, crop: :fill, class: 'd-block w-100', style: 'object-fit: contain; height: auto;'%>
                      </div>
                      <% @stall.photos_aggregation.each do |image | %>
                        <div class="carousel-item">
                          <%= cl_image_tag image.key, crop: :fill, class: 'd-block w-100', style: 'object-fit: contain; height: auto;'%>
                        </div>
                      <% end %>
                      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                  </div>
                <% end %>
                <div>
                  <div class="text-center mt-3"><%= rails_social_share_button_tag %></div>
                </div>

            </div>
    <!-- Right side section -->
    <div class="card col-6">
      <h1 class="text-center section-headers"> <%= @stall.name %></h1>
      <h2>General information</h2>
      <p class="info-entry "><%= @stall.description %></p>
      <h2>Address</h2>
      <p class="info-entry"> <%=@stall.address%> <p>
      <h2 >Services</h2>
      <% if @stall.services.nil? %>
        <span class="info-entry">
        <p><span class="fas fa-check-circle mr-1"></span>Spanish/English</p>
        <p><span class="fas fa-check-circle mr-1"></span>Best experience</p>
        <p><span class="fas fa-check-circle mr-1"></span>Debit/Credit cards</p>
        </span>
      <% else %>
      <span class="info-entry">
        <% @stall.services.drop(1).each do |service| %>
          <p><span class="fas fa-check-circle mr-1"></span><%= service %></p>
        <% end %>
      </span>

        <% end %>

      <div id= "buttons" class="d-flex mt-3 flex-row justify-content-around align-items-center">

        <div class="mt-2">
          <button type="button" class="btn btn-main" data-toggle="modal" data-target="#reviewBackdrop">Leave a review&nbsp; <i class="fas fa-comment">  </i></button>
        </div>
      </div>
    </div>
  </div>
</div>


  <!--Bottom side section-->
    <div class="map-reviews">
      <div class="row justify-content-start">
        <div class="card col-5 ml-5">
        <h1 class="text-center section-headers">How to get there? </h1>
          <div class="map-image mapboxgl-canvas-show">
          <div id="map"
            style="width: 100x; height: 300px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
          </div>
          </div>
        <div class="card col-6">
      <!-- Once Leave a Review is clicked, the following code needs to be executed withing div "insert-here" -->
      <% if @stall.reviews.empty? %>
        <h1 class="text-center section-headers">Reviews</h1>
        <p class="info-entry ">This place has no reviews yet. Be the first to leave a review!</p>
      <% else %>
        <h1 class="text-center section-headers">Reviews</h1>
        <% @stall.reviews.each do |review| %>
          <%= render 'shared/review-card-show', review: review %>
          <%= render 'shared/photo-modal', review: review %>
        <% end %>
        <% end %>
        </div>
      </div>
      <%= render 'shared/review-modal' %>
    </div>
</div>

