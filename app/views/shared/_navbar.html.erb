<div class="navbar-lewagon navbar navbar-expand-sm navbar-light fixed-top px-5 py-3">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "food-cart.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon">
      <i class="fas fa-bars" style="color:#fff; font-size:24px;"></i>
    </span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
  <ul class="navbar-nav mr-auto">
  <% if user_signed_in? %>
    <li class="nav-item">
      <button type="button" class="nav-button" data-toggle="modal" data-target="#stallBackdrop">ADD A FOOD STALL</button>
    </li>
    <li class="nav-item">
      <%= link_to "EXPLORE", stalls_path, class: "nav-link", style: 'color: white; font-weight: bold;' %>
    </li>
    <li class="nav-item dropdown">
    <% if current_user.avatar.attached? %>
      <%= cl_image_tag current_user.avatar.key, class: "avatar-2 dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <% else %>
      <%= image_tag "avatar.png", class: "avatar-2 dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <% end %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "PROFILE", current_user, class: "dropdown-item" %>
        <%= link_to "SIGN OUT", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </li>
    <% else %>
    <% if user_signed_in? %>
      <li class="nav-item">
        <button type="button" class="nav-button" data-toggle="modal" data-target="#stallBackdrop">ADD A FOOD STALL</button>
      </li>
    <% else %>
      <%= link_to new_user_session_path do %>
        <li class="nav-item">
          <button type="button" class="nav-button">ADD A FOOD STALL</button>
        </li>
      <% end %>
    <% end %>
    <li class="nav-item">
      <%= link_to "EXPLORE", stalls_path, class: "nav-link", style: 'color: white; font-weight: bold;' %>
    </li>
    <li class="nav-item">
      <%= link_to "LOG IN", new_user_session_path, style: 'text-decoration: none; color:white;', class: "nav-link btn-login" %>
    </li>
    <% end %>
  </ul>
  </div>
</div>
