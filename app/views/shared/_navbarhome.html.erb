<div class="navbar-home navbar navbar-expand-sm navbar-light fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "food-cart.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
  <ul class="navbar-nav mr-auto">
  <% if user_signed_in? %>
    <li class="nav-item">
      <%= link_to "Add a food stall", new_stall_path, class: "nav-link", style: 'color: white; font-weight: bold;' %>
    </li>
    <li class="nav-item">
      <%= link_to "Explore", stalls_path, class: "nav-link", style: 'color: white; font-weight: bold;' %>
    </li>
    <li class="nav-item dropdown">
      <%= image_tag "avatar.png", class: "avatar-2 dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "Profile", current_user, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
    </li>
    <% else %>
    <li class="nav-item">
      <%= link_to "Login / Sign Up", new_user_session_path, style: 'text-decoration: none; color:white;', class: "btn-transparant" %>
    </li>
    <% end %>
  </ul>
  </div>
</div>
